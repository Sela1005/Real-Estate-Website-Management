
@{
    ViewBag.Title = "QuanLyBatDongSan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Bảng Bất động sản </h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active">Quản lý Bất động sản</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
                <a href="~/QuanLy/ThemBDS">
                    Thêm sản phẩm
                </a>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Bảng bất động sản
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Giá</th>
                            <th>Diên tích</th>
                            <th>Vị trí</th>
                            <th>Loại BĐS</th>
                            <th>Tình trạng pháp lý</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Giá</th>
                            <th>Diên tích</th>
                            <th>Vị trí</th>
                            <th>Loại BĐS</th>
                            <th>Tình trạng pháp lý</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var a in ViewBag.listBDS)
                        {
                            <tr>
                                <td>@a[0]</td>
                                <td>@a[1]</td>
                                <td>@a[3]</td>
                                <td>@a[4]</td>
                                <td>@a[5]</td>
                                <td>@a[6]</td>
                                <td>@a[10]</td>
                                <th>Sửa</th>
                                <th>Xóa</th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

