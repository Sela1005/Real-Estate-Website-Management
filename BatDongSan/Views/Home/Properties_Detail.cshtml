@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="site-mobile-menu site-navbar-target">
    <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close">
            <span class="icofont-close js-menu-toggle"></span>
        </div>
    </div>
    <div class="site-mobile-menu-body"></div>
</div>

<nav class="site-nav">
    <div class="container">
        <div class="menu-bg-wrap">
            <div class="site-navigation">
                <a href="~/Home/index" class="logo m-0 float-start">Property</a>

                <ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu float-end">
                    <li><a href="~/Home/index">Home</a></li>
                    <li class="has-children">
                        <a href="~/Home/Properties">Properties</a>
                        <ul class="dropdown">
                            <li><a href="#">Buy Property</a></li>
                            <li><a href="#">Sell Property</a></li>
                            <li class="has-children">
                                <a href="#">Dropdown</a>
                                <ul class="dropdown">
                                    <li><a href="#">Sub Menu One</a></li>
                                    <li><a href="#">Sub Menu Two</a></li>
                                    <li><a href="#">Sub Menu Three</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li><a href="~/Home/Services">Services</a></li>
                    <li><a href="~/Home/about">About</a></li>
                    <li><a href="~/Home/contact">Contact Us</a></li>
                </ul>

                <a href="#"
                   class="burger light me-auto float-end mt-1 site-menu-toggle js-menu-toggle d-inline-block d-lg-none"
                   data-toggle="collapse"
                   data-target="#main-navbar">
                    <span></span>
                </a>
            </div>
        </div>
    </div>
</nav>

<div class="hero page-inner overlay"
     style="background-image: url('/images/hero_bg_3.jpg')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <h1 class="heading" data-aos="fade-up">
                    @ViewBag.list[0][1]
                </h1>

                <nav aria-label="breadcrumb"
                     data-aos="fade-up"
                     data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
                        <li class="breadcrumb-item">
                            <a href="~/Home/Properties">Properties</a>
                        </li>
                        <li class="breadcrumb-item active text-white-50"
                            aria-current="page">
                            @ViewBag.list[0][1]
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-7">
                <div class="img-property-slide-wrap">
                    <div class="img-property-slide">
                        <img src="~/images/img_1.jpg" alt="Image" class="img-fluid" />
                        <img src="~/images/img_2.jpg" alt="Image" class="img-fluid" />
                        <img src="~/images/img_3.jpg" alt="Image" class="img-fluid" />
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <h2 class="heading text-primary"> @ViewBag.list[0][1]</h2>
                <p class="meta">@ViewBag.list[0][5]</p>
                <p class="text-black-50">
                    Diện tích: @ViewBag.list[0][4] m <br />
                    Loại Bất động sản: @ViewBag.list[0][8] <br />
                    Tình trạng pháp lý: @ViewBag.list[0][10] <br />
                    Trạng thái: @ViewBag.list[0][7] <br />
                </p>

                @{
                    // Giả sử giá trị từ ViewBag là số thập phân
                    decimal amount = Convert.ToDecimal(ViewBag.list[0][3]);
                    string formattedAmount = String.Format("{0:N0} VNĐ", amount);
                }

                <h3 class="text-primary">@formattedAmount</h3>


                <p class="text-black-50">
                    Thông tin mô tả: @ViewBag.list[0][2]
                </p>

                <div class="d-block agent-box p-5">
                    <div class="img mb-4">
                        <img src="~/images/person_2-min.jpg"
                             alt="Image"
                             class="img-fluid" />
                    </div>
                    <div class="text">
                        <h3 class="mb-0">@ViewBag.listUser[0][1]</h3>
                        <div class="meta mb-3">@ViewBag.listUser[0][5]</div>
                        <p>
                            Số điện thoại liên lạc: <a href="tel:@ViewBag.listUser[0][4]"> @ViewBag.listUser[0][4]</a>
                        </p>
                        <ul class="list-unstyled social dark-hover d-flex">
                            <li class="me-1">
                                <a href="#"><span class="icon-instagram"></span></a>
                            </li>
                            <li class="me-1">
                                <a href="#"><span class="icon-twitter"></span></a>
                            </li>
                            <li class="me-1">
                                <a href="#"><span class="icon-facebook"></span></a>
                            </li>
                            <li class="me-1">
                                <a href="#"><span class="icon-linkedin"></span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

