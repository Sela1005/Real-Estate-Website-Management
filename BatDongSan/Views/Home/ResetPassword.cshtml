@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero page-inner overlay"
     style="background-image: url('/images/hero_bg_1.jpg')">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-9 text-center mt-5">
                <h1 class="heading" data-aos="fade-up">Quên mật khẩu</h1>

                <nav aria-label="breadcrumb"
                     data-aos="fade-up"
                     data-aos-delay="200">
                    <ol class="breadcrumb text-center justify-content-center">
                        <li class="breadcrumb-item"><a href="~/Home/index">Home</a></li>
                        <li class="breadcrumb-item active text-white-50"
                            aria-current="page">
                            Quên mật khẩu
                        </li>
                        <li class="breadcrumb-item active text-white-50"
                            aria-current="page">
                            Đặt lại mật khẩu
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    <h5 class="card-title text-center mb-5 fw-light fs-4">Quên mật khẩu</h5>
                    <form action="~/home/ResetPassword" method="post">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <div class="form-floating mb-3">
                            <input type="text" name="otp" class="form-control" required>
                            <label for="floatingInput">OTP</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" name="newPassword" class="form-control" required>
                            <label for="floatingInput">Mật khẩu mới</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" name="confirmPassword" class="form-control" required>
                            <label for="floatingInput">Xác nhận mật khẩu mới</label>
                        </div>
                        <p class="text-danger">@TempData["ErrorMessage"]</p>
                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                                Xác nhận
                            </button>
                        </div>
                        <hr class="my-4">
                        <h7 class="card-body text-center mb-5 fw-light fs-7"><a href="~/home/dangnhap">Đăng nhập</a></h7>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="overlayer"></div>
<div class="loader">
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>